# backend/.env.development

# ============================================================================
# APPLICATION
# ============================================================================
ENVIRONMENT=development
DEBUG=true
TESTING=false
LOG_LEVEL=DEBUG

# ============================================================================
# API INFO
# ============================================================================
API__NAME=FinancePro
API__TITLE=FinancePro API (Development)
API__VERSION=1.0.0
API__API_VERSION=v1
API__CONTACT_EMAIL=dev@financepro.app
API__LOGO_URL=http://localhost:3000/logo-dev.png

# ============================================================================
# DATABASE
# ============================================================================
DATABASE__URL=postgresql://financepro:financepro@localhost:5432/financepro_dev
DATABASE__ECHO=true
DATABASE__POOL_SIZE=5

# ============================================================================
# SECURITY
# ============================================================================
SECURITY__SECRET_KEY=dev-secret-key-change-in-production
SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=60
SECURITY__PASSWORD_MIN_LENGTH=6

# ============================================================================
# CORS (permissive for development)
# ============================================================================
CORS__ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000"]

# ============================================================================
# FEATURES (all enabled in dev)
# ============================================================================
FEATURE__ENABLE_AI_CLASSIFICATION=true
FEATURE__ENABLE_VECTOR_SEARCH=true
FEATURE__ENABLE_BUDGET_FORECASTING=true
FEATURE__ENABLE_ANALYTICS=true
FEATURE__ENABLE_CSV_IMPORT=true
FEATURE__ENABLE_PDF_EXPORT=true

# ============================================================================
# RATE LIMITING (disabled in dev)
# ============================================================================
RATE_LIMIT__ENABLED=false