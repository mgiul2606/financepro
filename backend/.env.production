# backend/.env.production

# ============================================================================
# APPLICATION
# ============================================================================
ENVIRONMENT=production
DEBUG=false
TESTING=false
LOG_LEVEL=INFO

# ============================================================================
# API INFO
# ============================================================================
API__NAME=FinancePro
API__TITLE=FinancePro API
API__VERSION=1.0.0
API__API_VERSION=v1
API__CONTACT_EMAIL=support@financepro.app
API__LOGO_URL=https://financepro.app/assets/logo.png

# ============================================================================
# DATABASE
# ============================================================================
DATABASE__URL=postgresql://user:password@prod-db-server:5432/financepro_prod
DATABASE__ECHO=false
DATABASE__POOL_SIZE=20
DATABASE__MAX_OVERFLOW=40

# ============================================================================
# SECURITY
# ============================================================================
SECURITY__SECRET_KEY=${SECRET_KEY_FROM_SECRETS_MANAGER}
SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY__PASSWORD_MIN_LENGTH=8

# ============================================================================
# CORS (restrictive for production)
# ============================================================================
CORS__ALLOWED_ORIGINS=["https://app.financepro.com","https://www.financepro.com"]

# ============================================================================
# FEATURES
# ============================================================================
FEATURE__ENABLE_AI_CLASSIFICATION=true
FEATURE__ENABLE_VECTOR_SEARCH=true
FEATURE__ENABLE_BUDGET_FORECASTING=false  # Not ready yet
FEATURE__ENABLE_ANALYTICS=true
FEATURE__ENABLE_CSV_IMPORT=true
FEATURE__ENABLE_PDF_EXPORT=true

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT__ENABLED=true
RATE_LIMIT__REQUESTS_PER_MINUTE=60
RATE_LIMIT__REQUESTS_PER_HOUR=1000

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
OPENAI_API_KEY=${OPENAI_KEY_FROM_SECRETS}
SENTRY_DSN=${SENTRY_DSN_FROM_SECRETS}